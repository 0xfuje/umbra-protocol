{
  "name": "@umbra/umbra-js",
  "version": "0.0.1",
  "description": "Send and receive stealth payments",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "test": "yarn build && mocha -r ts-node/register ./test/*.test.ts --exit --timeout 0",
    "lint": "eslint --ext .js,.ts ./",
    "prettier": "prettier --write .",
    "watch": "tsc --watch",
    "build:types": "typechain --target ethers-v5 --outDir types/contracts '../contracts/build/contracts/*.json'",
    "build": "yarn build:types && tsc --build",
    "clean": "rimraf build",
    "prepare": "yarn build",
    "prepublishOnly": "yarn lint && yarn test",
    "precommit": "lint-staged"
  },
  "author": "Matt Solomon <matt@mattsolomon.dev>, Ben DiFrancesco <ben@scopelift.co>",
  "license": "ISC",
  "dependencies": {
    "@unstoppabledomains/resolution": "^1.16.0",
    "buffer": "^6.0.2",
    "dotenv": "^8.2.0",
    "elliptic": "^6.5.2",
    "eth-ens-namehash": "^2.0.8",
    "ethers": "^5.0.25",
    "js-sha3": "^0.8.0"
  },
  "devDependencies": {
    "@openzeppelin/test-environment": "^0.1.6",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.14",
    "@types/elliptic": "^6.4.12",
    "@types/mocha": "^8.0.4",
    "chai": "^4.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.20.2",
    "mocha": "^7.1.2",
    "ts-node": "^9.0.0",
    "typechain": "^4.0.1"
  },
  "keywords": [
    "ethereum",
    "privacy",
    "payments",
    "web3"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ScopeLift/umbra.git"
  }
}
